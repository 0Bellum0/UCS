package filme;

import java.io.Serializable;
import java.util.Date;
import estabelecimento.Assento;
import estabelecimento.Sala;
import principal.Programa;

public class Ingresso implements Serializable {

	private static final long serialVersionUID = 1L;
	private String comprador;
	private Date data;
	private Date hora;
	private boolean meia;
	private double celular;
	private static float preco = 20;
	private float precoFinal;
	private Assento assento;
	private Filme filme;
	private Sala sala;

	public Ingresso() {

	}

	public Ingresso(Sala sala, Date data, Date hora, boolean meia, double celular, Filme filme,
			Assento assento) {
		this.sala = sala;
		this.data = data;
		this.hora = hora;
		this.meia = meia;
		this.celular = celular;
		this.setFilme(filme);
		this.setAssento(assento);
		if (meia) {
			this.setPrecoFinal(preco / 2);
		} else {
			setPrecoFinal(preco);
		}
	}

	public Sala getsala() {
		return sala;
	}

	public void setsala(Sala sala) {
		this.sala = sala;
		Programa.setDataChanged();
	}

	public Date getData() {
		return data;
	}

	public void setData(Date data) {
		this.data = data;
		Programa.setDataChanged();
	}

	public Date getHora() {
		return hora;
	}

	public void setHora(Date hora) {
		this.hora = hora;
		Programa.setDataChanged();
	}

	public boolean isMeia() {
		return meia;
	}

	public void setMeia(boolean meia) {
		this.meia = meia;
		Programa.setDataChanged();
	}

	public double getCelular() {
		return celular;
	}

	public void setCelular(double celular) {
		this.celular = celular;
		Programa.setDataChanged();
	}

	public float getPreco() {
		return preco;
	}

	public void setPreco(float preco) {
		Ingresso.preco = preco;
		Programa.setDataChanged();
	}

	public float getPrecoFinal() {
		return precoFinal;
	}

	public void setPrecoFinal(float precoFinal) {
		this.precoFinal = precoFinal;
	}

	public Assento getAssento() {
		return assento;
	}

	public void setAssento(Assento assento) {
		this.assento = assento;
	}

	public Filme getFilme() {
		return filme;
	}

	public void setFilme(Filme filme) {
		this.filme = filme;
	}
}